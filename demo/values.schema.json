{
  "properties": {
    "name": {
      "description": "Application name",
      "type": "string"
    },
    "condition": {
      "$ref": "#/$defs/image"
    },
    "replicas": {
      "description": "Number of replicas",
      "type": "integer"
    },
    "image": {
      "description": "Container Image",
      "type": "string"
    },
    "version": {
      "description": "Container image version",
      "type": "string"
    },
    "service": {
      "description": "Expose your application",
      "type": "boolean"
    }
  },
  "$defs": {
    "image": {
      "type": "object",
      "properties": {
        "registry": {
          "type": "string",
          "description": "The host of the registry",
          "examples": [
            "docker.io"
          ]
        },
        "repository": {
          "type": "string",
          "description": "The image path in the registry",
          "examples": [
            "bitnami/kubectl"
          ]
        },
        "tag": {
          "type": "string"
        },
        "digest": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  },
  "order": [
    "name",
    "condition",
    "replicas",
    "script",
    "json",
    "image",
    "version",
    "service"
  ],
  "required": [
    "name",
    "replicas",
    "image",
    "version"
  ],
  "title": "Values",
  "type": "object"
}
